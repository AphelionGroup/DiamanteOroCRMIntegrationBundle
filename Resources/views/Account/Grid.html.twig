{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

<div class="responsive-cell">
    <div class="box-type1">
        <div class="title">
            <span class="widget-title">Support tickets</span>
        </div>

        <div class="row-fluid">
            {% set emails = [] %}
            {% for contact in entity.contacts %}
                {% for email in contact.emails %}
                    {% set emails = emails|merge([email.getEmail])  %}
                {% endfor %}
            {% endfor %}
            {{ dataGrid.renderGrid('diamante-account-ticket-grid', {id: entity.id, emails: emails}) }}
        </div>
    </div>
</div>
